{
  "name": "gdnbot2",
  "description": "The next iteration of GDNBot?",
  "repository": {},
  "license": "",
  "scripts": {
    "start": "NODE_ENV=development nodemon src/bot.js | bunyan",
    "host": "NODE_ENV=production node src/bot.js",
    "test": "jest",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "axios": "^0.18.0",
