    "discord.js-commando": "github:discordjs/Commando",
    "dotenv": "^7.0.0",
    "sqlite": "^3.0.2"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-mock-axios": "^2.3.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "semistandard": "^13.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "semistandard --fix",
